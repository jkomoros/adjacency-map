{
  "$ref": "#/definitions/JSONData",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ConstantType": {
      "type": "string"
    },
    "EdgeDefinition": {
      "additionalProperties": false,
      "properties": {
        "constants": {
          "additionalProperties": {
            "type": "number"
          },
          "type": "object"
        },
        "description": {
          "type": "string"
        },
        "reducer": {
          "$ref": "#/definitions/ReducerType"
        },
        "value": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "value"
      ],
      "type": "object"
    },
    "EdgeType": {
      "type": "string"
    },
    "EdgeValue": {
      "additionalProperties": {
        "anyOf": [
          {
            "not": {}
          },
          {
            "type": "number"
          },
          {
            "$ref": "#/definitions/EdgeType"
          },
          {
            "$ref": "#/definitions/NodeID"
          }
        ]
      },
      "properties": {
        "ref": {
          "$ref": "#/definitions/NodeID"
        },
        "type": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "JSONData": {
      "additionalProperties": false,
      "properties": {
        "nodes": {
          "additionalProperties": {
            "$ref": "#/definitions/NodeData"
          },
          "type": "object"
        },
        "root": {
          "$ref": "#/definitions/NodeValues"
        },
        "types": {
          "additionalProperties": {
            "$ref": "#/definitions/EdgeDefinition"
          },
          "type": "object"
        },
        "version": {
          "type": "number"
        }
      },
      "required": [
        "version",
        "types",
        "nodes"
      ],
      "type": "object"
    },
    "NodeData": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "values": {
          "items": {
            "$ref": "#/definitions/EdgeValue"
          },
          "type": "array"
        }
      },
      "required": [
        "description"
      ],
      "type": "object"
    },
    "NodeID": {
      "type": "string"
    },
    "NodeValues": {
      "additionalProperties": {
        "type": "number"
      },
      "description": "The final computed values of all of the values for a node.",
      "type": "object"
    },
    "ReducerType": {
      "enum": [
        "mean",
        "first",
        "last",
        "min",
        "max",
        "sum",
        "product"
      ],
      "type": "string"
    },
    "ValueDefinition": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        {
          "$ref": "#/definitions/ValueDefintionEdgeConstant"
        },
        {
          "$ref": "#/definitions/ValueDefinitionRefValue"
        }
      ]
    },
    "ValueDefinitionRefValue": {
      "additionalProperties": false,
      "properties": {
        "property": {
          "$ref": "#/definitions/EdgeType"
        },
        "type": {
          "const": "ref",
          "type": "string"
        }
      },
      "required": [
        "type",
        "property"
      ],
      "type": "object"
    },
    "ValueDefintionEdgeConstant": {
      "additionalProperties": false,
      "properties": {
        "property": {
          "$ref": "#/definitions/ConstantType"
        },
        "type": {
          "const": "edge",
          "type": "string"
        }
      },
      "required": [
        "type",
        "property"
      ],
      "type": "object"
    }
  }
}
