{
  "$ref": "#/definitions/MapDefinition",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ArithmeticOperator": {
      "enum": [
        "+",
        "*",
        "-",
        "/"
      ],
      "type": "string"
    },
    "CombinerType": {
      "enum": [
        "mean",
        "first",
        "last",
        "min",
        "max",
        "sum",
        "product"
      ],
      "type": "string"
    },
    "CompareOperator": {
      "enum": [
        "==",
        "!=",
        "<",
        ">",
        "<=",
        ">="
      ],
      "type": "string"
    },
    "ConstantType": {
      "type": "string"
    },
    "EdgeDefinition": {
      "additionalProperties": false,
      "properties": {
        "combine": {
          "$ref": "#/definitions/CombinerType"
        },
        "constants": {
          "additionalProperties": {
            "type": "number"
          },
          "type": "object"
        },
        "dependencies": {
          "items": {
            "$ref": "#/definitions/EdgeType"
          },
          "type": "array"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "value"
      ],
      "type": "object"
    },
    "EdgeType": {
      "type": "string"
    },
    "EdgeValue": {
      "additionalProperties": {
        "anyOf": [
          {
            "not": {}
          },
          {
            "type": "number"
          },
          {
            "$ref": "#/definitions/EdgeType"
          },
          {
            "$ref": "#/definitions/NodeID"
          }
        ]
      },
      "properties": {
        "ref": {
          "$ref": "#/definitions/NodeID"
        },
        "type": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "MapDefinition": {
      "additionalProperties": false,
      "properties": {
        "nodes": {
          "additionalProperties": {
            "$ref": "#/definitions/NodeDefinition"
          },
          "type": "object"
        },
        "root": {
          "$ref": "#/definitions/NodeValues"
        },
        "types": {
          "additionalProperties": {
            "$ref": "#/definitions/EdgeDefinition"
          },
          "type": "object"
        },
        "version": {
          "type": "number"
        }
      },
      "required": [
        "version",
        "types",
        "nodes"
      ],
      "type": "object"
    },
    "NodeDefinition": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "values": {
          "items": {
            "$ref": "#/definitions/EdgeValue"
          },
          "type": "array"
        }
      },
      "required": [
        "description"
      ],
      "type": "object"
    },
    "NodeID": {
      "type": "string"
    },
    "NodeValues": {
      "additionalProperties": {
        "type": "number"
      },
      "description": "The final computed values of all of the values for a node.",
      "type": "object"
    },
    "ValueDefinition": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        {
          "$ref": "#/definitions/ValueDefintionEdgeConstant"
        },
        {
          "$ref": "#/definitions/ValueDefinitionRefValue"
        },
        {
          "$ref": "#/definitions/ValueDefinitionResultValue"
        },
        {
          "$ref": "#/definitions/ValueDefinitionCombine"
        },
        {
          "$ref": "#/definitions/ValueDefinitionArithmetic"
        },
        {
          "$ref": "#/definitions/ValueDefinitionCompare"
        },
        {
          "$ref": "#/definitions/ValueDefinitionClip"
        },
        {
          "$ref": "#/definitions/ValueDefinitionRange"
        },
        {
          "$ref": "#/definitions/ValueDefinitionPercent"
        }
      ]
    },
    "ValueDefinitionArithmetic": {
      "additionalProperties": false,
      "properties": {
        "child": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "operator": {
          "$ref": "#/definitions/ArithmeticOperator"
        },
        "term": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "operator",
        "child",
        "term"
      ],
      "type": "object"
    },
    "ValueDefinitionClip": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "clip": {
              "$ref": "#/definitions/ValueDefinition"
            },
            "high": {
              "$ref": "#/definitions/ValueDefinition"
            },
            "low": {
              "$ref": "#/definitions/ValueDefinition"
            }
          },
          "required": [
            "clip",
            "low"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "clip": {
              "$ref": "#/definitions/ValueDefinition"
            },
            "high": {
              "$ref": "#/definitions/ValueDefinition"
            },
            "low": {
              "$ref": "#/definitions/ValueDefinition"
            }
          },
          "required": [
            "clip",
            "high"
          ],
          "type": "object"
        }
      ]
    },
    "ValueDefinitionCombine": {
      "additionalProperties": false,
      "properties": {
        "child": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "combine": {
          "$ref": "#/definitions/CombinerType"
        }
      },
      "required": [
        "combine",
        "child"
      ],
      "type": "object"
    },
    "ValueDefinitionCompare": {
      "additionalProperties": false,
      "description": "Takes two children and applies the comparison to them, returning DEFAULT_TRUE_NUMBER or FALSE_NUMBER.",
      "properties": {
        "child": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "compare": {
          "$ref": "#/definitions/CompareOperator"
        },
        "term": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "compare",
        "child",
        "term"
      ],
      "type": "object"
    },
    "ValueDefinitionPercent": {
      "additionalProperties": false,
      "properties": {
        "high": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "low": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "percent": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "percent",
        "low",
        "high"
      ],
      "type": "object"
    },
    "ValueDefinitionRange": {
      "additionalProperties": false,
      "properties": {
        "high": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "low": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "range": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "range",
        "low",
        "high"
      ],
      "type": "object"
    },
    "ValueDefinitionRefValue": {
      "additionalProperties": false,
      "properties": {
        "ref": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "ref"
      ],
      "type": "object"
    },
    "ValueDefinitionResultValue": {
      "additionalProperties": false,
      "properties": {
        "result": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "result"
      ],
      "type": "object"
    },
    "ValueDefintionEdgeConstant": {
      "additionalProperties": false,
      "properties": {
        "constant": {
          "$ref": "#/definitions/ConstantType"
        }
      },
      "required": [
        "constant"
      ],
      "type": "object"
    }
  }
}
