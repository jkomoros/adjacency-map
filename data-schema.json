{
  "$ref": "#/definitions/MapDefinition",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "CombinerType": {
      "enum": [
        "mean",
        "first",
        "last",
        "min",
        "max",
        "sum",
        "product"
      ],
      "type": "string"
    },
    "ConstantType": {
      "type": "string"
    },
    "EdgeDefinition": {
      "additionalProperties": false,
      "properties": {
        "combine": {
          "$ref": "#/definitions/CombinerType"
        },
        "constants": {
          "additionalProperties": {
            "type": "number"
          },
          "type": "object"
        },
        "dependencies": {
          "items": {
            "$ref": "#/definitions/EdgeType"
          },
          "type": "array"
        },
        "description": {
          "type": "string"
        },
        "value": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "value"
      ],
      "type": "object"
    },
    "EdgeType": {
      "type": "string"
    },
    "EdgeValue": {
      "additionalProperties": {
        "anyOf": [
          {
            "not": {}
          },
          {
            "type": "number"
          },
          {
            "$ref": "#/definitions/EdgeType"
          },
          {
            "$ref": "#/definitions/NodeID"
          }
        ]
      },
      "properties": {
        "ref": {
          "$ref": "#/definitions/NodeID"
        },
        "type": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "MapDefinition": {
      "additionalProperties": false,
      "properties": {
        "nodes": {
          "additionalProperties": {
            "$ref": "#/definitions/NodeDefinition"
          },
          "type": "object"
        },
        "root": {
          "$ref": "#/definitions/NodeValues"
        },
        "types": {
          "additionalProperties": {
            "$ref": "#/definitions/EdgeDefinition"
          },
          "type": "object"
        },
        "version": {
          "type": "number"
        }
      },
      "required": [
        "version",
        "types",
        "nodes"
      ],
      "type": "object"
    },
    "NodeDefinition": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "values": {
          "items": {
            "$ref": "#/definitions/EdgeValue"
          },
          "type": "array"
        }
      },
      "required": [
        "description"
      ],
      "type": "object"
    },
    "NodeID": {
      "type": "string"
    },
    "NodeValues": {
      "additionalProperties": {
        "type": "number"
      },
      "description": "The final computed values of all of the values for a node.",
      "type": "object"
    },
    "ValueDefinition": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        {
          "$ref": "#/definitions/ValueDefintionEdgeConstant"
        },
        {
          "$ref": "#/definitions/ValueDefinitionRefValue"
        },
        {
          "$ref": "#/definitions/ValueDefinitionResultValue"
        },
        {
          "$ref": "#/definitions/ValueDefinitionCombine"
        },
        {
          "$ref": "#/definitions/ValueDefinitionArithmetic"
        }
      ]
    },
    "ValueDefinitionArithmetic": {
      "additionalProperties": false,
      "properties": {
        "child": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "operator": {
          "enum": [
            "+",
            "*"
          ],
          "type": "string"
        },
        "term": {
          "$ref": "#/definitions/ValueDefinition"
        }
      },
      "required": [
        "operator",
        "child",
        "term"
      ],
      "type": "object"
    },
    "ValueDefinitionCombine": {
      "additionalProperties": false,
      "properties": {
        "child": {
          "$ref": "#/definitions/ValueDefinition"
        },
        "combine": {
          "$ref": "#/definitions/CombinerType"
        }
      },
      "required": [
        "combine",
        "child"
      ],
      "type": "object"
    },
    "ValueDefinitionRefValue": {
      "additionalProperties": false,
      "properties": {
        "ref": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "ref"
      ],
      "type": "object"
    },
    "ValueDefinitionResultValue": {
      "additionalProperties": false,
      "properties": {
        "result": {
          "$ref": "#/definitions/EdgeType"
        }
      },
      "required": [
        "result"
      ],
      "type": "object"
    },
    "ValueDefintionEdgeConstant": {
      "additionalProperties": false,
      "properties": {
        "constant": {
          "$ref": "#/definitions/ConstantType"
        }
      },
      "required": [
        "constant"
      ],
      "type": "object"
    }
  }
}
